@page "/profile"

<PageTitle>Profile - Vera</PageTitle>

<div class="profile-container">
    <h2>Your Profile</h2>
    
    <div class="profile-section">
        <h3>Photos</h3>
        <div class="photo-grid">
            <div class="photo-upload">
                <button class="btn btn-outline-primary">+ Add Photo</button>
            </div>
        </div>
    </div>
    
    <div class="profile-section">
        <h3>About You</h3>
        <p>Complete your profile by chatting with our AI assistant.</p>
        <a href="/chat" class="btn btn-primary">Start Conversation</a>
    </div>
    
    <div class="profile-section">
        <h3>Preferences</h3>
        <p>Tell us what you're looking for.</p>
        <a href="/chat" class="btn btn-outline-primary">Set Preferences</a>
    </div>
</div>

